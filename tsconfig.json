{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/es",
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": [
    "**/__tests__/*"
  ]
}
